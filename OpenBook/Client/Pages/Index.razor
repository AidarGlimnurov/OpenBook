        int a = 0;
    }

    void GoToBooks()
    {
        navigation.NavigateTo("books");
    }
    void GoToMyBooks()
    {
        navigation.NavigateTo("mybooks");
    }
    private void GoToBook(int id)
    {
        navigation.NavigateTo($"book/{id}/0");
    }
}
